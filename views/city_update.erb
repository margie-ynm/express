<div id="update-city-form">
  <h3>Update Details for <%= @city.name %></h3>
  <form action="/cities/<%= @city.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="city-name">City Name</label>
    <input type="text" id="city-name" name="city-name">
    <button type="submit" class="btn btn-success purple">Update City</button>
  </form>
</div>
